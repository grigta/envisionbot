# Docker Compose Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED: Authentication
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=
JWT_EXPIRES_IN=7d

# ============================================
# REQUIRED: Claude API (choose ONE option)
# ============================================
# Option 1: Direct API key (pay-as-you-go)
ANTHROPIC_API_KEY=

# Option 2: Claude Code OAuth token
# CLAUDE_CODE_OAUTH_TOKEN=

# ============================================
# REQUIRED: Telegram Bot
# ============================================
# Get from @BotFather
TELEGRAM_BOT_TOKEN=
TELEGRAM_ADMIN_CHAT_ID=

# ============================================
# Optional: Server Configuration
# ============================================
# Scheduling
HEALTH_CHECK_INTERVAL=4h
DEEP_ANALYSIS_TIME=09:00
TIMEZONE=UTC

# ============================================
# Optional: OpenRouter API (for crawler/scraper)
# ============================================
OPENROUTER_API_KEY=
OPENROUTER_MODEL=google/gemini-3-flash-preview

# ============================================
# Optional: Task Executor
# ============================================
TASK_EXECUTOR_ENABLED=true
TASK_EXECUTOR_INTERVAL=*/5 * * * *
TASK_EXECUTOR_REQUIRE_APPROVAL=false

# ============================================
# Optional: GitHub Integration
# ============================================
GITHUB_AUTO_CREATE_ISSUE=true
GITHUB_SYNC_ENABLED=true
GITHUB_SYNC_INTERVAL=15

# ============================================
# Optional: Email Notifications (SMTP)
# ============================================
# Email service configuration for notifications
# Leave empty to disable email notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Envision CEO <your-email@gmail.com>

# ============================================
# Optional: Panel API Configuration
# ============================================
# URL for the panel to reach the agent
# Use http://pm-agent:3001 for internal Docker network
# Use http://localhost:3001 for external access
API_BASE_URL=http://pm-agent:3001
