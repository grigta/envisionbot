{
  "name": "envision-ceo",
  "version": "1.0.0",
  "description": "Envision CEO - Autonomous Project Manager Agent powered by Claude",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "codes": "tsx src/scripts/manage-codes.ts",
    "codes:create": "tsx src/scripts/manage-codes.ts create",
    "codes:list": "tsx src/scripts/manage-codes.ts list",
    "migrate:github-issues": "tsx src/scripts/migrate-tasks-to-github.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@envisionbot/crawler-engine": "file:../crawler-engine",
    "@fastify/cors": "^8.4.0",
    "@fastify/type-provider-zod": "^2.0.0",
    "@fastify/websocket": "^8.3.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^11.0.0",
    "crawlee": "^3.15.3",
    "dotenv": "^16.4.0",
    "execa": "^9.0.0",
    "fastify": "^4.25.0",
    "ioredis": "^5.4.0",
    "jsonwebtoken": "^9.0.3",
    "node-schedule": "^2.1.1",
    "playwright": "^1.40.0",
    "puppeteer": "^24.36.1",
    "scraper-engine": "file:../scraper-engine",
    "telegraf": "^4.16.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.0.0",
    "@types/node-schedule": "^2.1.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
